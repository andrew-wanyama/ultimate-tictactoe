<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/control_padding"
    tools:context=".GameActivity">

    <TextView
        android:id="@+id/next_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="@dimen/controls_space"
        android:text="@string/next_player"
        android:textColor="@color/control_text_color"
        android:textAppearance="?android:textAppearanceLarge"/>

    <Button
        android:id="@+id/restart_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/next_player"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/main_button"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/main_button"
        android:elevation="@dimen/elevation_low"
        android:layout_margin="@dimen/control_button_margin"
        android:padding="@dimen/control_button_padding"
        android:drawableTop="@drawable/restart"
        android:text="@string/restart_label"/>

    <Button
        android:id="@+id/main_button"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/next_player"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:elevation="@dimen/elevation_low"
        android:layout_margin="@dimen/control_button_margin"
        android:padding="@dimen/control_button_padding"
        android:drawableTop="@drawable/home"
        android:text="@string/main_menu_label"/>

</RelativeLayout>
